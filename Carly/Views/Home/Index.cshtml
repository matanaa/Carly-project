@model IEnumerable<Carly.Models.Degem>

@{
    ViewBag.Title = "Home Page";
}


<h2>Our Inventory</h2>


<div id="tableShow">
    <table id="allCars" class="table table-hover table-bordered " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    Origin Country
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (ViewBag.carDetails))
            {
                {
                    <tr>
                        <td>
                            @(item.brandName)
                        </td>
                        <td>
                            @(item.originCountry)
                        </td>
                        <td>
                            @(item.color)
                        </td>
                        <td>
                            @(item.quantity)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

