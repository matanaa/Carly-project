@model IEnumerable<Carly.Models.CarDetails>

@{
    ViewBag.Title = "Home Page";
}


<h2>Our Inventory</h2>


<div id="tableShow">
    <table id="allCars" class="table table-hover table-bordered " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.brandName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.originCountry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DegemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantity)
                </th>
          
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (ViewBag.carDetails))
            {
                {
                    <tr>
                        <td>
                            @(item.brandName)
                        </td>
                        <td>
                            @(item.originCountry)
                        </td>
                        <td>
                            @(item.DegemName)
                        </td>
                        <td>
                            @(item.color)
                        </td>
                        <td>
                            @(item.quantity)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

    @section scripts
{
        <script>
            $(document).ready(function () {
                var tbt = $('#allCars').DataTable(
                    {
                        "autoWidth": true
                    });
                tbt.columns.adjust().draw();
            });
        </script>
    }