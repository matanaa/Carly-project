@model IEnumerable<Carly.Models.Brand>
@{
    Layout = null;
}

<!--GroupBy country Query-->
@foreach (var country in Model.GroupBy(g => g.OriginCountry)) 
{
    <h2>@country.Key <span class="badge badge-default badge-pill">@country.Count()</span></h2>
       

    <table id="Brands-@country.Key" class="table table-hover table-bordered " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BrandName)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in country)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    
                </tr>
            }
        </tbody>
    </table>
}